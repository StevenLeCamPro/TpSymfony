{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">User index</h1>

    <table class="min-w-full bg-white border border-gray-200">
        <thead>
            <tr>
                <th class="px-4 py-2 border-b">Id</th>
                <th class="px-4 py-2 border-b">Email</th>
                <th class="px-4 py-2 border-b">Roles</th>
                <th class="px-4 py-2 border-b">Password</th>
                <th class="px-4 py-2 border-b">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="bg-gray-100">
                <td class="px-4 py-2 border-b">{{ user.id }}</td>
                <td class="px-4 py-2 border-b">{{ user.email }}</td>
                <td class="px-4 py-2 border-b">{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="px-4 py-2 border-b">{{ user.password }}</td>
                <td class="px-4 py-2 border-b">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-blue-500 hover:underline">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-blue-500 hover:underline ml-2">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="px-4 py-2 border-b text-center">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}" class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Create new</a>
{% endblock %}
